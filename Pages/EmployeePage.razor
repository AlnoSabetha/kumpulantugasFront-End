@page "/employeepage"

<link rel="stylesheet" href="css/style.css">
<h3>Daftar Employee</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Employees)
        {
            <tr>
                <td>@emp.EmployeeId</td>
                <td>@emp.FirstName @emp.LastName</td>
                <td><a href= "@($"employeedetail/{emp.EmployeeId}")" class="btn btn-info">details</a>
                <a href="#" class="btn btn-warning m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a></td>
            </tr>
            
        }
    </tbody>
</table>